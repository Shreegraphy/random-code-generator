import random
from tkinter import *
def random_word():
    with open('randomcode.txt', 'r') as rand:
        text = rand.read()
        words = text.split()
        print("Your code is:",random.choice(words))
        

root = Tk()
root.geometry('100x100')

btn = Button(root, text='Click me!', bd='5', command=random_word)
btn.pack(side='top')


root.mainloop()
